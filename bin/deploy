#!/usr/bin/env sh

# Exit if any subcommand fails.
set -e

echo "Started deploying"

rm .asset-cache -dr

# Build site.
yarn install --modules-folder ./_assets/yarn
JEKYLL_ENV=production bundle exec jekyll build

if [ ! -d ../deploy/ ]; then
    mkdir ../deploy/
fi

rm ../deploy/* -dr

mv _site/* ../deploy/
rm -dr _site/

echo "Deployed Successfully!"

exit 0
